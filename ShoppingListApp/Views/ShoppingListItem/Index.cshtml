@model IEnumerable<ShoppingListApp.Models.ShoppingListItem>

@{
    ViewBag.Title = "Index";
}

<h2>List Items</h2>

<input type="button" value="Add Item" style="float: right;" onclick="location.href='@Url.Action("Create", "ShoppingListItem", "ShoppingListItem")'" />
@*<input type="button" value="Delete Checked" style="float: right;" onclick="location.href='@Url.Action("DeleteChecked")'" />*@

<p>
    &nbsp;
</p>


    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
<hr />
    <table class="table">
        <tr bgcolor="#D3D3D3">
            <th>
                @Html.DisplayNameFor(model => model.IsChecked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingList.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUtc)
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="color: @item.ShoppingList.Color">
                <td>
                    @Html.DisplayFor(modelItem => item.IsChecked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShoppingList.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUtc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
